{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": [
            "jquery"
        ]
    },
    "include": [
        "ts/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.js"
    ]
}